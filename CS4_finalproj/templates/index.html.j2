{% extends 'base.html.j2' %}

{% block title %}
    Cyberpunk Rhythm
{% endblock %}

{% block scripts %}
    <script src="static/utils.js"></script>
{% endblock %}

{% block body %}
    <div class="top_right_link">
        {% if not loggedIn %}
        <a class="link" href="/login">Login</a>
        {% else %}
        <a class="link" id="profile_link" href="/profile">Profile</a>
        {% endif %}
    </div>

    <div class="top_left_link">
        <a class="link" href="./help">Help</a>
    </div>

    <div id="game_container"></div>

<div class="index_links">
    <div class="index_link">
        <a id="return_link" href="./">Restart</a>
    </div>

    <div class="index_link">
        <a id="leaderboard_link" href="./leaderboard">Leaderboard</a>
    </div>

    <div class="index_link">
    </div>
</div>

<script type="module" src="./static/canvas.js"></script>

{% if loggedIn %}
    <script>
        var profileLink = document.getElementById("profile_link");
        profileLink.style.display = 'block';
    </script>
{% endif %}
{% endblock %}