{% extends 'base.html.j2' %}

{% block title %}
    Title
{% endblock %}

{% block scripts %}
    <script src="static/utils.js"></script>
{% endblock %}

{% block body %}
    {% if not loggedIn %}
        <a id="login_logout" href="./login">Login</a>
    {% else %}
        <a id="login_logout" href="./logout">Logout</a>
    {% endif %}
    

    <div id="game_container"></div>

    <form id = "results_form" action="leaderboard" method="POST">
        <div id="horizontal_spacer"></div>
        <a id="return_link" href="./">Restart</a>
        <a id="profile_link" href="./profile">Profile</a>
        <button id = "results_button" type="submit" name="score" value=-1 class="link-button">
            Leaderboard
        </button>
    </form>

    <script type="module" src="./static/canvas.js"></script>

    {% if loggedIn %}
        <script>
            var profileLink = document.getElementById("profile_link");
            profileLink.style.display = 'block';
        </script>
    {% endif %}
{% endblock %}