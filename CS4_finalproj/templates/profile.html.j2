{% extends "base.html.j2" %}

{% block title %}
    Profile
{% endblock %}

{% block body %}
<h1>
User Profile
</h1>

<div class="top_left_link">
    <a class="link" href="./leaderboard">Leaderboard</a>
</div>

<div class="top_right_link">
    <a class="link" href="./">Game</a>
</div>

{% if loggedIn %}
<p>
    You are logged in as <em>{{email}}</em> and your username is <em>{{username}}</em>. 
    <a href="./username">Change your username</a>
</p>

<p>
    Past scores:
</p>

<table>
    {% for game in game_list %}
    <tr>
        <td>{{game[0]}}</td>
        <td>{{game[1]}}</td>
    </tr>
    {% endfor %}
</table>
{% else %}
Not logged in. Log in <a id="login_link" href="./login">here.</a>
{% endif %}

{% endblock %}